/*
 * ex5_3.cpp
 *
 * Exercise 3: Write a program that asks the user to enter an integer
 * and then prints the cummulative sum of the integers entered to date.
 * Have the program terminate when the user enters 0.
 *
 *  Created on: Apr 6, 2016
 *      Author: lamadd0x
 */

#include <iostream>

int main()
{
	int sum = 0;
	int inp = 1;

	while (inp !=0)
	{
		std::cout << "Enter an integer: ";
		std::cin >> inp;
		sum += inp;
		std::cout << "Cumulative Sum: " << sum << std::end;
	}

	return 0;

}


