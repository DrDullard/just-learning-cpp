/*
 * ex4_6.cpp
 *
 * Exercise 6: The CandyBar structure has three members as described in
 * Exercise 5.  Write a program that creates an array of three CandyBar
 * structures, initializes them to values of your choice, and then
 * displays the contents of each structure.
 *
 *  Created on: Apr 2, 2016
 *      Author: lamadd0x
 */

#import <iostream>
#import <string>

struct CandyBar
{
	std::string name;
	float weight;
	int cal;
};

int main()
{
	CandyBar snack[3] =
	{
			{"Mocha Munch", 2.3, 350},
			{"Almond Joy", 3.2, 275},
			{"Snickers", 4.6, 395}
	};

	std::cout << "The " << snack[0].name << " weighs " << snack[0].weight
				  << " ounces and has " << snack[0].cal << " calories.\n";

	std::cout << "The " << snack[1].name << " weighs " << snack[1].weight
				  << " ounces and has " << snack[1].cal << " calories.\n";

	std::cout << "The " << snack[2].name << " weighs " << snack[2].weight
				  << " ounces and has " << snack[2].cal << " calories.\n";

	return 0;

}


